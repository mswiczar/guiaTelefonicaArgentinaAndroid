<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
	android:background="#FFFFFF"
    android:layout_width="fill_parent"
    android:layout_height="?android:attr/listPreferredItemHeight"
    android:padding="0dip">

    <ImageView
        android:id="@+id/noimage"
        android:layout_width="wrap_content"
        android:layout_height="fill_parent"
        android:layout_marginRight="10dip"
        android:padding="3dip"
        android:src="@drawable/call_contact" />

    <LinearLayout
		android:background="#FFFFFF"
        android:orientation="vertical"
        android:layout_width="0dip"
        android:layout_weight="1"
        android:layout_height="fill_parent">

        <TextView
            android:id="@+id/labelName"
            android:layout_width="fill_parent"
            android:layout_height="18dip"
            android:layout_weight="0.34"
            android:gravity="center_vertical"
            android:text="XXXXXXXXXXXXXXXXXXXXXXXXXXXXXXXXXXXXXXXXXXXXXXXXXX"
            android:textSize="12dip" android:textStyle="bold" android:textColor="#000000" android:lines="1"/>
        
        <TextView
            android:id="@+id/labelPhone"
            android:layout_width="fill_parent"
            android:layout_height="18dip"
            android:layout_weight="1"
            android:gravity="center_vertical"
            android:textSize="12dip"
            android:text="XXXXXXXXXXXXXXXXXXXXXXXXXXXXXXXXXXXXXXXXXXXXXXXXXX"
        android:textColor="#BBBBBB" android:lines="1"/>
        

            <TextView
                android:id="@+id/labelStreet1"
                android:layout_width="fill_parent"
                android:layout_height="36dip"
                android:layout_weight="0.09"
	            android:gravity="center_vertical"
                android:text="XXXXXXXXXXXXXXXXXXXXXXXXXXXXXXXXXXXXXXXXXXXXXXXXXX"
                
                android:textSize="12dip" android:textColor="#BBBBBB" android:lines="2"/>
            
        
        </LinearLayout>

</LinearLayout>